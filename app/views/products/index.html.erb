  <!-- Page Content -->
  <div class="container mt-4" id="products">

   

    <!-- Product Section -->

    <div class="row text-center">
      <% @products.each do |p| %>
      <div class="col-4 product-item">
        <div class="card h-100 border-0">
          <%= image_tag p.image, class: 'card-img-top' %>
          <div class="card-body">
            <h4 class="card-title text-center">
              <%= link_to "$#{p.price.round}", p, class: 'text-decoration-none text-dark stretched-link' %>
            </h4>
            <p class="card-text text-center"><strong><%= p.title %></strong></p>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    <!-- /.row -->

    <!-- Features Section -->
    <div class="row">
      <div class="col-lg-6">
