<div class="container">
	<div class="row my-5">
		<div class="col-md-6 mb-4">
 
 <!--Carousel Wrapper-->
    <div id="carousel-thumb" class="carousel slide carousel-fade carousel-thumbnails" data-ride="carousel">
      <!--Slides-->
      <div class="carousel-inner text-center" role="listbox">
        <div class="carousel-item active">
        	<%= image_tag @product.image %>
        </div>
        <div class="carousel-item">
        	<%= image_tag @product.image2 %>
        </div>
        <div class="carousel-item">
        	<%= image_tag @product.image3 %>
        </div>
      </div>
      <!--/.Slides-->
      <!--Controls-->
      <a class="carousel-control-prev" href="#carousel-thumb" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carousel-thumb" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
      <!--/.Controls & Thumbnails -->
      <ol class="carousel-indicators">
        <li data-target="#carousel-thumb" data-slide-to="0" class="active">
        	<%= image_tag @product.image, class: 'img-fluid d-block w-100' %>
        </li>
        <li data-target="#carousel-thumb" data-slide-to="1">
        	<%= image_tag @product.image2, class: 'img-fluid d-block w-100' %>
				</li>
        <li data-target="#carousel-thumb" data-slide-to="2">
        	<%= image_tag @product.image3, class: 'img-fluid d-block w-100' %>
        </li>
      </ol>
    </div>
    <!--/.Carousel Wrapper-->

		</div>
		<div class="col">
			<h2><%= @product.title %></h2>
			<%= form_tag order_items_path do %>
				<%= hidden_field_tag :product_id, @product.id %>
				<div class="ml-3 my-4">
					<strong><%= number_to_currency @product.price %></strong>
            <i class="fa fa-star ml-5"></i>
            <i class="fa fa-star"></i>
            <i class="fa fa-star"></i>
            <i class="fa fa-star"></i>
            <i class="fa fa-star"></i> ( <%= @product.reviews.count %> )
				</div><hr/>
				<div class="row mt-5">
					<div class="col-md-3">
						<%= select_tag :quantity, options_for_select(1..5), class: 'form-control mb-2' %>
					</div>
					<div class="col">
						<%= submit_tag 'Add to Cart', class: 'btn btn-custom btn-block text-white' %>
					</div>
				</div>
				<p class="text-muted">*Limited time FREE shipping on ALL orders internationally.</p>
			<% end %>

      <!-- Begin card with nav tabs -->
			<div class="card mt-5">
        <div class="card-header">
          <ul class="nav nav-pills card-header-pills">
            <li class="nav-item">
              <a class="nav-link active" id="description-tab" data-toggle="tab" href="#description" role="tab" aria-controls="description" aria-selected="true">Description</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" id="reviews-tab" data-toggle="tab" href="#reviews" role="tab" aria-controls="reviews" aria-selected="true">Reviews</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" id="specs-tab" data-toggle="tab" href="#specs" role="tab" aria-controls="specs" aria-selected="true">Specs</a>
            </li>
          </ul>
        </div>
        <div class="card-body">
          <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="description" role="tabpanel" aria-labelledby="description-tab">
              <%= @product.description %>
            </div>
            <div class="tab-pane fade" id="reviews" role="tabpanel" aria-labelledby="reviews-tab">
              <ul id="reviewz">
              <% @product.reviews.each do |p| %>
                <li class="media">
                  <%= image_tag p.avatar, class: 'review-avatar mr-3 align-self-center rounded' %><small>
                  <div class="media-body">
                    <h5 class="d-inline mr-3"><%= p.name %></h5>
                    <% p.stars.times do %>
                      <i class="fa fa-star"></i>
                    <% end %>
                    <p class="text-muted">Country: <%= p.country %></p>                    
                    <p><%= p.comments %></p>
                  </div></small>
                </li><hr/>
                  <p class="text-right">Write a Review</p>
                </ul>
              <% end %>
            </div>
            <div class="tab-pane fade" id="specs" role="tabpanel" aria-labelledby="specs-tab">
            </div>
          </div>
				</div>
			</div>
      <!-- /card -->
		</div>
	</div>
</div>






