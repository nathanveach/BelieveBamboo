<div class="container">
	<div class="row">
		<div class="col-md-6">
			<div class="card bg-light mt-5">
				<div class="card-body">
					<ul class="list-unstyled my-4">
						<% @items.each do |i| %>
							<li class="media my-4">
								<%= link_to i.product do %>
									<%= image_tag i.product.image, class: 'cart-img mr-3' %>
								<% end %>
								<div class="media-body text-center mt-4 w-75">
									<p><%= i.product.title %>
									<% number_to_currency i.price %> x <%= i.quantity %> = <%= number_to_currency (i.price * i.quantity) %></p>
								</div>
							</li>
						<% end %>
					</ul><hr/>
					<p class="text-right mr-3"><strong>Sub Total:</strong> <%=number_to_currency current_cart.sub_total %></p>
					<p class="text-muted text-right my-n3 mr-3">*Taxes included</p>
				</div>
			</div>
		</div>
		<div class="col-md-6">
			<div class="card bg-light mt-5">
				<div class="card-title text-center mt-3">
					<h5>Shipping Information</h5>				
				</div>
				<%= form_for @order, url: checkout_path, html: { id: 'checkoutForm'} do |f| %>
					<h4 class="text-center mb-3">** Free Shipping **</h4>
      	<% @items.each do |i| %>
      	<p class="text-right my-n1">
      		<strong><%= i.quantity %></strong> x <%= i.product.title %>
					<% number_to_currency i.price %>
				</p>
				<% end %>
					<hr class="my-3"/>
					<ul class="list-unstyled mt-n2"><small class="text-muted">
						<li class="text-right">Sub Total: <%=number_to_currency current_cart.sub_total %></li>
						<li class="text-right">Tax: $0.00</li>
						<li class="text-right">Shipping: <strike>$5.99</strike></li>
						<li class="text-right"></small>Total: <strong><%=number_to_currency current_cart.sub_total %></strong></li>
					</ul>
	        <div class="md-form mb-5">	
	        	<div class="field form-group">
	        		<%= label_tag "Name on Card" %>
							<%= f.text_field :cardname, class: 'form-control', placeholder: 'First and Last Name' %>
						</div>					
						<div class="field form-group">
	            <%= label_tag "Card Number" %>
	            <div id="card-element" class="form-control"></div>
	            <div id="card-errors" role="alert"></div>
	          </div>
					<div class="row mt-5 mb-n4 ml-2">
						<div class="col">
							<i class="fa fa-cc-stripe fa-lg"></i>
						</div>
						<div class="col">
							<i class="fa fa-cc-visa fa-lg"></i>
						</div>
						<div class="col">
							<i class="fa fa-cc-mastercard fa-lg"></i>
						</div>
						<div class="col">
							<i class="fa fa-cc-discover fa-lg"></i>
						</div>
						<div class="col">
							<i class="fa fa-cc-amex fa-lg"></i>
						</div>
					</div>
	      </div>
	 				<%= f.submit "Pay #{number_to_currency current_cart.sub_total}", class: 'btn btn-block text-center btn-custom text-white', id: 'submitBtn' %>
	      </div>
    </div>
  </div>
</div>
<% end %>
							</div>
						</div>
					</div>
					<div class="mx-5 my-3">
					  <button class="btn btn-block text-center btn-custom text-white" data-toggle="modal" data-target="#modalCheckoutForm" id="checkoutModal" type="button">Calculate Shipping</button>
					</div>
			</div>
		</div>
	</div>
</div>

