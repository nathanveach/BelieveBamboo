
<div class="container">
	<div class="row">
		<div class="col-md-8 offset-md-2">
			<div class="card bg-light cart-card my-4">
				<div class="card-title">
					<h1 class="bamboo-title text-center mb-n4">Your Bamboo Cart</h1>
				</div><hr class="hr-custom"/>
				<div class="card-body">
					<ul class="list-unstyled">
						<% @items.each do |i| %>
							<li class="media">
								<%= link_to i.product do %>
									<%= image_tag i.product.image, class: 'cart-img mr-3' %>
								<% end %>
								<div class="media-body text-center mt-4 w-75">
									<h6><%= i.product.title %>
									<% number_to_currency i.price %> x <%= i.quantity %> = <%= number_to_currency (i.price * i.quantity) %></h6>
								</div>
								<%= form_for i, method: :delete do |f| %>
									<%= f.submit 'Remove', class: 'btn btn-sm btn-danger mt-4 ml-3' %>
								<% end %>
							</li><hr/>
						<% end %>
						<% if current_cart.items_count > 0 %>
							<div class="row">
								<div class="col">
									<ul class="list-unstyled">
										<li class="text-right">Sub Total: <%=number_to_currency current_cart.sub_total %></li>
										<li class="text-muted text-right my-n1"><small>Free international shipping</small>
										</li>
										<li class="text-muted text-right"><small>Est. time: 2-4 weeks</small>
										</li>
									</ul>
								</div>
							</div>
							<%= link_to 'Proceed to Checkout', customer_path, class: 'btn btn-custom btn-block text-white border mt-3' %>
			        <div class="row mt-3 mb-n3 text-center">
			          <div class="col">
			            <i class="fa fa-cc-stripe fa-lg"></i>
			          </div>
			          <div class="col">
			            <i class="fa fa-cc-visa fa-lg"></i>
			          </div>
			          <div class="col">
			            <i class="fa fa-cc-mastercard fa-lg"></i>
			          </div>
			          <div class="col">
			            <i class="fa fa-cc-discover fa-lg"></i>
			          </div>
			          <div class="col">
			            <i class="fa fa-cc-amex fa-lg"></i>
			          </div>
			        </div>
							<% else %>
								<h1 class="my-5">Oops! Looks like your cart is empty... Browse our products   
								<a class="cart-link ml-2" href="/#products"><u>HERE</u></a></h1>
						<% end %>
						</div>
					</ul>
				</div>
			</div>
		</div>
	</div>
</div>












